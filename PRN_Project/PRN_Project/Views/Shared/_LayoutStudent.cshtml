<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Student</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/student.css" />
</head>
@RenderSection("Scripts", required: false)
<body class="bg-light">
    <div class="d-flex flex-column min-vh-100">
        @Html.Partial("_Header")
        <div class="d-flex flex-grow-1">
            <aside class="bg-white border-end shadow-sm" style="width: 250px;">
                @Html.Partial("_SidebarStudent")
            </aside>
            <main class="flex-fill p-4">
                @RenderBody()
            </main>
        </div>
        @Html.Partial("_Footer")
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

<script>
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/notificationHub")
        .build();

    connection.on("ReceiveNotification", function (message) {
        alert(message); // Hiện popup thông báo
        // hoặc bạn có thể append vào vùng hiển thị thông báo
        // document.getElementById("notificationList").innerHTML += `<li>${message}</li>`;
    });

    connection.start().catch(err => console.error(err.toString()));
</script>
</body>
</html>
