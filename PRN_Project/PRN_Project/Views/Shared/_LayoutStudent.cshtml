<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Student</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/student.css" />
    <link rel="stylesheet" href="~/css/global-notification.css" />
</head>
<body class="bg-light">
    <div class="d-flex flex-column min-vh-100">
        @Html.Partial("_Header")
        <div class="d-flex flex-grow-1">
            <aside class="bg-white border-end shadow-sm" style="width: 250px;">
                @Html.Partial("_SidebarStudent")
            </aside>
            <main class="flex-fill p-4">
                @RenderBody()
            </main>
        </div>
        @Html.Partial("_Footer")
    </div>

    <div id="notifyBox"
     style="position:fixed; top:20px; right:20px; z-index:9999;"></div>
    <script src="~/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/notification.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    <script src="~/js/global-notification.js"></script>
</body>
</html>
