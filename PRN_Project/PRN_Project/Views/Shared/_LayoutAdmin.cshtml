<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="~/css/global-notification.css" />
</head>

<body style="background-color: #eef2f7;">
    <div class="d-flex flex-column min-vh-100">
        @Html.Partial("_Header")
        <div class="d-flex flex-grow-1">
            <aside class="bg-dark text-white border-end" style="width: 250px;">
                @Html.Partial("_SidebarAdmin")
            </aside>
            <main class="flex-fill p-4">
                @RenderBody()
            </main>
        </div>
        @Html.Partial("_Footer")
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
   
	<script src="~/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/global-notification.js"></script>
</body>
</html>
