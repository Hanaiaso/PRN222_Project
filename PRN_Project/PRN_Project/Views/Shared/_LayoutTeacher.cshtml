<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Teacher</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/teacher.css" />
    <link rel="stylesheet" href="~/css/global-notification.css" />
</head>
<body style="background-color: #f3f6fa;">
    <div class="d-flex flex-column min-vh-100">
        @Html.Partial("_Header")
        <div class="d-flex flex-grow-1">
            <aside class="bg-secondary-subtle border-end" style="width: 250px;">
                @Html.Partial("_SidebarTeacher")
            </aside>
            <main class="flex-fill p-4">
                @RenderBody()
            </main>
        </div>
        @Html.Partial("_Footer")
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    @RenderSection("Scripts", required: false)

	<script src="~/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/global-notification.js"></script>
</body>
</html>