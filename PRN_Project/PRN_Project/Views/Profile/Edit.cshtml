@model PRN_Project.ViewModels.ProfileViewModel
@{
    // Đặt Layout dựa trên Role
    string layout = (ViewBag.Role == "Teacher") ? "_LayoutTeacher" : "_LayoutStudent";
    Layout = $"~/Views/Shared/{layout}.cshtml";
    ViewData["Title"] = "Chỉnh sửa thông tin cá nhân";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("ShowProfile", "Profile")">Thông tin cá nhân</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa</li>
    </ol>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <i class="fas fa-user-edit me-1"></i>
                    Cập nhật thông tin
                </div>
                <div class="card-body">
                    <form asp-controller="Profile" asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Email chỉ hiển thị, không cho sửa -->
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" value="@Model.Email" readonly style="background-color: #e9ecef;" />
                            <small class="form-text text-muted">Email không thể thay đổi</small>
                        </div>
                        <input type="hidden" asp-for="Email" />

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <!-- Các trường này chỉ dành cho Student -->
                        @if (ViewBag.Role == "Student")
                        {
                            <div class="mb-3">
                                <label asp-for="Dob" class="form-label">Ngày sinh</label>
                                <input asp-for="Dob" class="form-control" type="date" />
                                <span asp-validation-for="Dob" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Gender" class="form-label">Giới tính</label>
                                <select asp-for="Gender" class="form-select">
                                    @if (string.IsNullOrEmpty(Model.Gender))
                                    {
                                        <option value="">-- Chọn giới tính --</option>
                                    }
                                    <option value="Male">Nam</option>
                                    <option value="Female">Nữ</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        }

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                Lưu thay đổi
                            </button>
                            <a href="@Url.Action("ShowProfile", "Profile")" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>
                                Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

