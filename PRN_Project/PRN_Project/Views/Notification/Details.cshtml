@model PRN_Project.Models.Notification

@{
    ViewData["Title"] = "Chi tiết thông báo";
}

<h2>@Model.Title</h2>

<div class="card p-3 mt-3">
    <p><strong>Người gửi:</strong> @Model.Sender?.Email (@Model.Sender?.Role)</p>
    <p><strong>Ngày gửi:</strong> @Model.SentTime.ToString("dd/MM/yyyy HH:mm")</p>
    <p><strong>Nội dung:</strong></p>
    <p>@Model.Content</p>
</div>
<br/>
<p>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</p>
