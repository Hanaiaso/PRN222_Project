@model IEnumerable<PRN_Project.Models.Notification>

@{
    ViewData["Title"] = "Danh sách thông báo";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">+ Tạo thông báo mới</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Người gửi</th>
            <th>Thời gian gửi</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Sender?.Email</td>
                <td>@item.SentTime.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.NtId" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.NtId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.NtId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
