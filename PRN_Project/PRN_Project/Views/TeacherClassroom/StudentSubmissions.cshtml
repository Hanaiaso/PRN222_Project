@model IEnumerable<PRN_Project.Models.Submit>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Bài thi</th>
            <th>Ngày nộp</th>
            <th>Điểm số</th>
            <th>Nhận xét</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sub in Model)
        {
            <tr>
                <td>@sub.Exam.EName</td>
                <td>@sub.SubmitTime.ToString("dd/MM/yyyy HH:mm")</td>
                <td><strong>@sub.Score</strong></td>
                <td>@(string.IsNullOrEmpty(sub.Comment) ? "—" : sub.Comment)</td>
                <td>
                    <a asp-action="SubmissionDetails"
                       asp-route-submitId="@sub.SbId"
                       asp-route-studentId="@sub.SId"
                       asp-route-classroomId="@ViewBag.ClassroomId"
                       class="btn btn-info btn-sm" title="Xem chi tiết">
                        <i class="fas fa-eye"></i> Chi tiết
                    </a>

                    <a asp-action="EditComment"
                       asp-route-submitId="@sub.SbId"
                       asp-route-classroomId="@ViewBag.ClassroomId"
                       class="btn btn-secondary btn-sm" title="Thêm nhận xét">
                        <i class="fas fa-comment"></i>
                        Nhận xét
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>