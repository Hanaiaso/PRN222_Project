@model PRN_Project.Models.Teacher

<h2>Delete Teacher Account</h2>

<div>
    <h4>Are you sure you want to delete this teacher?</h4>
    <p><strong>@Model.TName</strong> (@Model.Account.Email)</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="TId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="TeacherAccount" class="btn btn-secondary">Cancel</a>
    </form>
</div>
