@model PRN_Project.Models.Teacher

<h2>Edit Teacher Account</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TId" />
    <div class="form-group">
        <label>Email</label>
        <input name="email" class="form-control" value="@Model.Account.Email" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input name="password" type="password" class="form-control" value="@Model.Account.Password" />
    </div>
    <div class="form-group">
        <label>Status</label>
        <input type="checkbox" name="status" value="true" @(Model.Account.Status ? "checked" : "") /> Active
    </div>
    <div class="form-group">
        <label>Teacher Name</label>
        <input asp-for="TName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Qualification</label>
        <input asp-for="Qualification" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>

