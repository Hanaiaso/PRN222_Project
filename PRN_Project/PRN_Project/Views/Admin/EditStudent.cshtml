@model PRN_Project.Models.Student

@{
    ViewData["Title"] = "Chỉnh sửa tài khoản học sinh";
}

<h2>Chỉnh sửa: @Model.SName</h2>
<hr />

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="EditStudent" asp-route-studentId="@Model.SId" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="SId" />

            <h4>Thông tin học sinh</h4>
            <div class="mb-3">
                <label asp-for="SName" class="form-label">Tên học sinh</label>
                <input asp-for="SName" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Gender" class="form-label">Giới tính</label>
                <input asp-for="Gender" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Dob" class="form-label">Ngày sinh</label>
                <input asp-for="Dob" type="date" class="form-control" />
            </div>

            <hr />
            <h4>Thông tin tài khoản</h4>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input name="email" class="form-control" value="@Model.Account.Email" />
            </div>

            <div class="mb-3">
                <label class="form-label">Mật khẩu mới</label>
                <input name="password" type="password" class="form-control"
                       placeholder="Để trống nếu không muốn thay đổi" />
                <small class="form-text text-muted">Phải có ít nhất 8 ký tự nếu nhập.</small>
            </div>

            <div class="mb-3 form-check">
                <input name="status" type="checkbox" class="form-check-input"
                       value="true" @(Model.Account.Status ? "checked" : "") />
                <label class="form-check-label">Hoạt động (Đã kích hoạt)</label>
                <input type="hidden" name="status" value="false" />
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                <a asp-action="StudentAccounts" class="btn btn-link">Hủy</a>
            </div>
        </form>
    </div>
</div>