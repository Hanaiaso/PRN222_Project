@model IEnumerable<PRN_Project.Models.Teacher>


<h2>Teacher Accounts</h2>
<p>
    <a asp-action="CreateTeacher" class="btn btn-primary">➕ Tạo tài khoản giáo viên mới</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên giáo viên</th>
            <th>Email</th>
            <th>Qualification</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TName</td>
                <td>@t.Account.Email</td>
                <td>@t.Qualification</td>
                <td>
                    @if (t.Account.Status)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Bị khóa</span>
                    }
                </td>

                <td>
                    <a asp-controller="Admin" asp-action="TeacherDetails" asp-route-id="@t.TId" class="btn btn-info btn-sm">
                        Chi tiết
                    </a>
                    <a asp-controller="Admin" asp-action="EditTeacher" asp-route-id="@t.TId" class="btn btn-warning btn-sm">
                        Sửa
                    </a>

                    <form asp-controller="Admin" asp-action="ToggleTeacherStatus" method="post" style="display:inline;">
                        <input type="hidden" name="accountId" value="@t.Account.AId" />
                        @Html.AntiForgeryToken()

                        @if (t.Account.Status)
                        {
                            <button type="submit" class="btn btn-danger btn-sm">
                                Khóa
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success btn-sm">
                                Mở khóa
                            </button>
                        }
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
