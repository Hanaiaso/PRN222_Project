@model IEnumerable<PRN_Project.Models.Teacher>


<h2>Teacher Accounts</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">➕ Add New Teacher</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Teacher Name</th>
            <th>Email</th>
            <th>Qualification</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TName</td>
                <td>@t.Account.Email</td>
                <td>@t.Qualification</td>
                <td>@(t.Account.Status ? "Active" : "Inactive")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@t.TId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@t.TId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@t.TId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
