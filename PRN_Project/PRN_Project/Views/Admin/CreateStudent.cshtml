@model PRN_Project.Models.Student

@{
    ViewData["Title"] = "Tạo tài khoản học sinh";
}

<h2>Tạo tài khoản học sinh mới</h2>
<hr />

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateStudent" method="post">
            @Html.AntiForgeryToken()

            <h4>Thông tin học sinh</h4>
            <div class="mb-3">
                <label asp-for="SName" class="form-label">Tên học sinh</label>
                <input asp-for="SName" class="form-control" required />
            </div>
            <div class="mb-3">
                <label asp-for="Gender" class="form-label">Giới tính</label>
                <input asp-for="Gender" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Dob" class="form-label">Ngày sinh</label>
                <input asp-for="Dob" type="date" class="form-control" required />
            </div>

            <hr />
            <h4>Thông tin tài khoản</h4>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input name="email" type="email" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Mật khẩu</label>
                <input name="password" type="password" class="form-control" required />
                <small class="form-text text-muted">Phải có ít nhất 8 ký tự.</small>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a asp-action="StudentAccounts" class="btn btn-link">Hủy</a>
            </div>
        </form>
    </div>
</div>