@model List<PRN_Project.Models.LearningMaterial>
@{
    ViewBag.Title = "Tài liệu học tập";
    var subjects = ViewBag.Subjects as List<PRN_Project.Models.Subject>;
    int? selectedId = ViewBag.SelectedSubjectId as int?;
}

<h2>Tài liệu học tập</h2>

<form method="get" class="mb-3">
    <label class="form-label">Chọn môn học:</label>
    <select name="subjectId" class="form-select" onchange="this.form.submit()">
        <option value="">-- Chọn môn học --</option>
        @foreach (var s in subjects)
        {
            <option value="@s.SuId">
                @s.SuName
            </option>
        }
    </select>
</form>

@if (Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tiêu đề</th>
                <th>Mô tả</th>
                <th>Link</th>
                <th>Ngày upload</th>
            </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Title</td>
                <td>@Model[i].Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(Model[i].FilePath))
                    {
                        <a href="@Model[i].FilePath" target="_blank">Xem</a>
                    }
                    else
                    {
                        <span>Không có link</span>
                    }
                </td>
                <td>@Model[i].UploadDate.ToString("dd/MM/yyyy")</td>
            </tr>
        }
        </tbody>
    </table>
}
else if (selectedId.HasValue)
{
    <p class="text-muted">Chưa có tài liệu cho môn học này.</p>
}
