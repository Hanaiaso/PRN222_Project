@model List<PRN_Project.Models.LearningMaterial>
@{
    ViewBag.Title = "Danh sách tài liệu";
}

<h2>Danh sách tài liệu</h2>

<p>
    <a class="btn btn-primary" asp-action="Create" asp-route-subjectId="@ViewBag.SubjectId">Thêm tài liệu mới</a>
    <a class="btn btn-secondary" asp-controller="Subject" asp-action="Index">Quay lại danh sách môn học</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Tiêu đề</th>
            <th>Mô tả</th>
            <th>Link</th>
            <th>Ngày upload</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Title</td>
                <td>@Model[i].Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(Model[i].FilePath))
                    {
                            <a href="@Model[i].FilePath" target="_blank">Xem</a>
                    }
                    else
                    {
                            <span>Không có link</span>
                    }
                </td>
                <td>@Model[i].UploadDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@Model[i].MaterialID">Sửa</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@Model[i].MaterialID">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

