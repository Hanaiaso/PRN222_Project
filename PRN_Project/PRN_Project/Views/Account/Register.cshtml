@model PRN_Project.Models.Account
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng ký - LMS</title>
    <link rel="stylesheet" href="~/css/auth-styles.css" />
    <style>
        .password-hint {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 0.25rem;
        }

    </style>
</head>
<body>
    <div class="auth-container">
        <h2>Đăng ký tài khoản</h2>

        @if (ViewBag.Error != null)
        {
            <div class="error-message">@ViewBag.Error</div>
        }

        <form asp-action="Register" method="post">
            <div>
                <label>Email:</label>
                <input asp-for="Email" type="email" placeholder="Nhập email của bạn" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label>Mật khẩu:</label>
                <input asp-for="Password" type="password" placeholder="Nhập mật khẩu" />
                <small class="password-hint">Ít nhất 8 ký tự, bao gồm chữ và số</small>
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label>Nhập lại mật khẩu:</label>
                <input asp-for="RePassword" type="password" placeholder="Xác nhận mật khẩu" />
                <span asp-validation-for="RePassword"></span>
            </div>
            <button type="submit">Đăng ký</button>
        </form>

        <div class="auth-links">
            <a href="/Account/Login">Đã có tài khoản? Đăng nhập</a>
        </div>
    </div>
</body>
</html>