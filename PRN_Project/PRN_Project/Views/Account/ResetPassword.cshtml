@model PRN_Project.Models.Account
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đặt lại mật khẩu - LMS</title>
    <link rel="stylesheet" href="~/css/auth-styles.css" />
    <style>
        .password-hint {
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 0.25rem;
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <h2>Đặt lại mật khẩu</h2>

        @if (ViewBag.Success != null)
        {
            <p class="success-message">@ViewBag.Success</p>
        }
        @if (ViewBag.Error != null)
        {
            <p class="error-message">@ViewBag.Error</p>
        }

        <form asp-action="ResetPassword" method="post">
            <div>
                <label>Mật khẩu mới:</label>
                <input asp-for="Password" type="password" placeholder="Nhập mật khẩu mới" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <small class="password-hint">Ít nhất 8 ký tự, bao gồm chữ và số</small>
            </div>

            <div>
                <label>Xác nhận mật khẩu mới:</label>
                <input asp-for="RePassword" type="password" placeholder="Nhập lại mật khẩu mới" />
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
            <button type="submit">Đặt lại mật khẩu</button>
        </form>

        <div class="auth-links">
            <a href="/Account/Login">Quay lại đăng nhập</a>
        </div>
    </div>
</body>
</html>