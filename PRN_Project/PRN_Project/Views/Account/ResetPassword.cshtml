@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đặt lại mật khẩu - LMS</title>
    <link rel="stylesheet" href="~/css/auth-styles.css" />
</head>
<body>
    <div class="auth-container">
        <h2>Đặt lại mật khẩu</h2>

        @if (ViewBag.Success != null)
        {
            <p class="success-message">@ViewBag.Success</p>
        }

        @if (ViewBag.Error != null)
        {
            <p class="error-message">@ViewBag.Error</p>
        }

        <form method="post">
            <div>
                <input type="password" name="newPassword" placeholder="Nhập mật khẩu mới" required />
            </div>
            <button type="submit">Đặt lại mật khẩu</button>
        </form>

        <div class="auth-links">
            <a href="/Account/Login">Quay lại đăng nhập</a>
        </div>
    </div>
</body>
</html>