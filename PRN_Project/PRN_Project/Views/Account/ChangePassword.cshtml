@model PRN_Project.Models.ChangePasswordModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đổi mật khẩu - LMS</title>
    <link rel="stylesheet" href="~/css/auth-styles.css" />
</head>
<body>
    <div class="auth-container">
        <h2>Đổi mật khẩu</h2>

        @if (ViewBag.SuccessMessage != null)
        {
            <p class="success-message">@ViewBag.SuccessMessage</p>
        }

        <form asp-action="ChangePassword" method="post">
            <div>
                <label>Mật khẩu cũ</label>
                <input asp-for="OldPassword" type="password" placeholder="Nhập mật khẩu cũ" />
                <span asp-validation-for="OldPassword"></span>
            </div>
            <div>
                <label>Mật khẩu mới</label>
                <input asp-for="NewPassword" type="password" placeholder="Nhập mật khẩu mới" />
                <span asp-validation-for="NewPassword"></span>
            </div>
            <div>
                <label>Xác nhận mật khẩu mới</label>
                <input asp-for="ReNewPassword" type="password" placeholder="Nhập lại mật khẩu mới" />
                <span asp-validation-for="ReNewPassword"></span>
            </div>
            <button type="submit">Đổi mật khẩu</button>
        </form>

        <div class="auth-links">
            <a href="/Home/Index">Quay lại trang chủ</a>
        </div>
    </div>
</body>
</html>